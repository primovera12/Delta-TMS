# Environment Variables - Delta TMS
# Copy this file to .env.local for development
# Set these as environment variables in Vercel for production

# =============================================================================
# CORE SETTINGS
# =============================================================================

# Next.js
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL connection string (Neon, Supabase, or other provider)
DATABASE_URL="postgresql://user:password@host:5432/delta_tms?sslmode=require"

# Direct URL for migrations (if using connection pooling)
DIRECT_URL="postgresql://user:password@host:5432/delta_tms?sslmode=require"

# =============================================================================
# AUTHENTICATION
# =============================================================================

# NextAuth.js secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET="your-secret-key-here"

# NextAuth.js URL (set to your production domain in Vercel)
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# STRIPE PAYMENTS
# =============================================================================

# Stripe API keys
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxx
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxx

# Stripe webhook secret (from Stripe dashboard)
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxx

# =============================================================================
# TWILIO SMS
# =============================================================================

# Twilio account credentials
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# SENDGRID EMAIL
# =============================================================================

# SendGrid API key
SENDGRID_API_KEY=SG.xxxxxxxxxxxx

# Default sender email
SENDGRID_FROM_EMAIL=noreply@delta-tms.com
SENDGRID_FROM_NAME="Delta TMS"

# =============================================================================
# GOOGLE MAPS
# =============================================================================

# Google Maps API key (with Places, Geocoding, Distance Matrix APIs enabled)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=AIzaxxxxxxxxxxxx

# =============================================================================
# QUICKBOOKS INTEGRATION (Optional)
# =============================================================================

# QuickBooks OAuth credentials
QUICKBOOKS_CLIENT_ID=xxxxxxxxxxxx
QUICKBOOKS_CLIENT_SECRET=xxxxxxxxxxxx
QUICKBOOKS_REDIRECT_URI=http://localhost:3000/api/v1/integrations/quickbooks/callback
QUICKBOOKS_ENVIRONMENT=sandbox

# =============================================================================
# FEATURE FLAGS (Optional)
# =============================================================================

# Enable/disable features
NEXT_PUBLIC_ENABLE_PAYMENTS=true
NEXT_PUBLIC_ENABLE_SMS=true
NEXT_PUBLIC_ENABLE_QUICKBOOKS=false

# =============================================================================
# MONITORING & LOGGING (Optional - for production)
# =============================================================================

# Sentry error tracking
# SENTRY_DSN=https://xxxx@sentry.io/xxxx

# Log level
LOG_LEVEL=info
